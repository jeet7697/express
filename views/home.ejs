<%- include('./header.ejs') %>
<section class="banner">
    <div class="banner-box ">
        
        <img src="assets/images/b2.webp" alt="banner">
    </div>
</section>
<section class="featured-blog mtb-40">
    <div class="container">
        <div class="row">
            <% data.forEach((item)=>{ %>
                
             <div class="col-md-4">
                <div class="blog-box">
                    <img src="/upload/<%= item.image %>" width="250px" height="250px" alt="blog1" />
                    <h3><%= item.title %></h3>
                    <p><%= item.createdAt.toLocaleDateString() %></p>
                    <p><%= item.description .slice(0,90) %> </p>
                    <a href="/detail/<%= item._id %>" class="btn btn-warning">Read more...</a>
                </div>
            </div>
            <% })%>
            
        </div>
    </div>
</section>
<%- include('./footer.ejs') %>