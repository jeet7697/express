<%- include("../header.ejs")  %>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1>Register</h1>
                    <%if(message.length > 0){ %>
                        <div class="alert alert-warning alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <strong><%= message %></strong>
                          </div>
                      
                  
                  
                  </div>
                 
                  <% }%>
                    <form action="/registerinsert" method="post">
                        <div class="form-group">
                            <input type="text" name="username" class="form-control" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <input type="" name="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <input type="password" name="confirm_password" class="form-control" placeholder="Confrim-Password">
                            <div class="form-group">
                            <button class="btn btn-success" type="submit">Submit</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <a href="/login" class="btn btn-primary">Log In</a>
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>
<%- include("../footer.ejs")  %>