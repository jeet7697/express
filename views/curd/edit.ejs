<%- include('../header.ejs') %>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1>Add student</h1>
                    <form action="/curd/update/<%=data._id %>" method="post">
                        <div class="form-group">
                            <input  value="<%=data.name %>" type="text" name="name" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input value="<%=data.email %>" type="email" name="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>
<%- include('../footer.ejs') %>