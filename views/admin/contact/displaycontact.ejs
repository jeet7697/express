<%- include("../../header.ejs")  %>
<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/admin/dashboard" class="active">Dashboard</a></li>
                            <li><a href="/admin/createblog"> Create Blogs</a></li>
                            <li><a href="/admin/blogdisplay">Blogs display</a></li>
                             <li><a href="/admin/createcategory">Create Category</a></li>
                            <li><a href="/admin/displaycategory">Display Category</a></li>
                            <li><a href="/about">About</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1>Contact Query</h1>
                            </div>
                            
                        </div>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>#No.</th>
                                <th>name</th>
                                <th>email</th>
                             
                                <th>phone</th>
                                <th>message</th>
                                
                            
                            
                                <th>Action</th>
                            </tr>
                            <% var i=1 %>
                            <% data.forEach((item)=>{ %>
                                <!-- console.log(item) -->
                                <tr>
                                    <td><%= i++ %></td>
                                 
                                    <td><%= item.name %></td>
                                    <td><%= item.email %></td>
                                    <td><%= item.phone %></td>
                                    <td><%= item.message%></td>
                                    <td>
                                        <a href="/delete/<%= item._id %>" class="btn btn-danger"
                                            >Delete</a>
                                            <a href="/viewcontact/<%= item._id %>" class="btn btn-info"
                                                ><i class="fa-solid fa-eye"></i>View </a
                                              ><br />
                                        </td>
                                  </tr>
                            <% }) %>
                           
                            
                          
                           
                           
       
                        </table>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>
<%- include("../../footer.ejs") %>